<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="io.github.ceosilvajr.calculator.MainActivity"
    >

  <TextView
      android:id="@+id/tvNumberDisplay"
      android:layout_width="match_parent"
      android:layout_height="150dp"
      android:background="@android:color/darker_gray"
      android:gravity="end|bottom"
      android:padding="10dp"
      android:text="@string/_0"
      android:textColor="@android:color/white"
      android:textSize="42sp"
      />

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_below="@+id/tvNumberDisplay"
      android:orientation="vertical"
      >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        >

      <Button
          android:id="@+id/btnClear"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:gravity="center"
          android:padding="10dp"
          android:text="@string/cancel_sign"
          android:textColor="@android:color/black"
          android:textSize="42sp"
          />

      <Button
          android:id="@+id/btnPositiveNegative"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:gravity="center"
          android:padding="10dp"
          android:text="@string/positive_negative_sign"
          android:textColor="@android:color/black"
          android:textSize="42sp"
          />

      <Button
          android:id="@+id/btnPercentage"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:gravity="center"
          android:padding="10dp"
          android:text="@string/percentage_sign"
          android:textColor="@android:color/black"
          android:textSize="42sp"
          />

      <Button
          android:id="@+id/btnDivide"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:gravity="center"
          android:padding="10dp"
          android:text="@string/divide_sign"
          android:textColor="@android:color/white"
          android:textSize="42sp"
          />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        >

      <Button
          android:id="@+id/btn7"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:gravity="center"
          android:padding="10dp"
          android:text="@string/_7"
          android:textColor="@android:color/black"
          android:textSize="42sp"
          />

      <Button
          android:id="@+id/btn8"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:gravity="center"
          android:padding="10dp"
          android:text="@string/_8"
          android:textColor="@android:color/black"
          android:textSize="42sp"
          />

      <Button
          android:id="@+id/btn9"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:gravity="center"
          android:padding="10dp"
          android:text="@string/_9"
          android:textColor="@android:color/black"
          android:textSize="42sp"
          />

      <Button
          android:id="@+id/btnMultiply"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:gravity="center"
          android:padding="10dp"
          android:text="@string/multiply_sign"
          android:textColor="@android:color/white"
          android:textSize="42sp"
          />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        >

      <Button
          android:id="@+id/btn4"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:gravity="center"
          android:padding="10dp"
          android:text="@string/_4"
          android:textColor="@android:color/black"
          android:textSize="42sp"
          />

      <Button
          android:id="@+id/btn5"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:gravity="center"
          android:padding="10dp"
          android:text="@string/_5"
          android:textColor="@android:color/black"
          android:textSize="42sp"
          />

      <Button
          android:id="@+id/btn6"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:gravity="center"
          android:padding="10dp"
          android:text="@string/_6"
          android:textColor="@android:color/black"
          android:textSize="42sp"
          />

      <Button
          android:id="@+id/btnMinus"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:gravity="center"
          android:padding="10dp"
          android:text="@string/minus_sign"
          android:textColor="@android:color/white"
          android:textSize="42sp"
          />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        >

      <Button
          android:id="@+id/btn1"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:gravity="center"
          android:padding="10dp"
          android:text="@string/_1"
          android:textColor="@android:color/black"
          android:textSize="42sp"
          />

      <Button
          android:id="@+id/btn2"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:gravity="center"
          android:padding="10dp"
          android:text="@string/_2"
          android:textColor="@android:color/black"
          android:textSize="42sp"
          />

      <Button
          android:id="@+id/btn3"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:gravity="center"
          android:padding="10dp"
          android:text="@string/_3"
          android:textColor="@android:color/black"
          android:textSize="42sp"
          />

      <Button
          android:id="@+id/btnAdd"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:gravity="center"
          android:padding="10dp"
          android:text="@string/add_sign"
          android:textColor="@android:color/white"
          android:textSize="42sp"
          />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        >

      <Button
          android:id="@+id/btn0"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="2"
          android:gravity="center"
          android:padding="10dp"
          android:text="@string/_0"
          android:textColor="@android:color/black"
          android:textSize="42sp"
          />

      <Button
          android:id="@+id/btnDot"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:gravity="center"
          android:padding="10dp"
          android:text="@string/dot"
          android:textColor="@android:color/black"
          android:textSize="42sp"
          />

      <Button
          android:id="@+id/btnEquals"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:gravity="center"
          android:padding="10dp"
          android:text="@string/equals_sign"
          android:textColor="@android:color/white"
          android:textSize="42sp"
          />

    </LinearLayout>

  </LinearLayout>

</RelativeLayout>
